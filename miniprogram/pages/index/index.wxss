.userInfo{
  border-radius: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 680rpx;
  height: 200rpx;
  background: #fff;
  margin-top: 20rpx;
}
button:not([size='mini']){
  width: auto;
  padding: 0;
}
.avatarBox{
  margin-left: 30rpx;
  width:128rpx;
  height:128rpx;
  border-radius: 50%;
}
.infoText{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.infoText view{
  color: #aaa;
  font-size: 0.5em;
}
.appInfo{
  color: #555;
  font-size: 0.6em;
  display: flex;
  flex-direction: column;
}
.tools{
  display: flex;
  flex-direction: column;
  /* margin-top: 20rpx; */
  width: 700rpx;
}
.tools view{
  display: flex;
  flex-direction: row;
  width: 700rpx;
}
.tools view button{
  width: 680rpx;
  font-size: 1em;
  margin: 10rpx;
  border-radius: 25rpx;
}
button{
  display: flex;
  align-items: center;
  justify-content: center;  
  text-align: center；
}
text{
  padding: 0;
  word-break: keep-all;
}
.tiku{
  margin: 15rpx;
  border-radius: 25rpx;
  /* 这里宽度和上面对齐 */
  width: 642rpx;
  height: 60rpx;
  background: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.messageBox{
  margin-top: 10rpx;
  width: 660rpx;
  background: #fff;
  font-size: 20rpx;
  border-radius: 15rpx;
  padding: 10rpx;
}
picker{
  width: 100%;
  text-align: center;
  font-size: 1em;
}